<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script>
      var status = `<%- JSON.stringify(status) %>`;
      if (JSON.parse(status) === "verified") {
        window.location.href = "http://localhost:3000";
      }
    </script>
    <style>
      /* Style for body to enable flexbox */
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Set the body height to viewport height */
        margin: 0;
      }

      /* Style for form container */
      .form-container {
        max-width: 300px;
        width: 100%;
        padding: 20px;
        /* border: 1px solid #ccc; */
        border-radius: 15px;
        box-shadow: 0 5px 10px black;
        box-sizing: border-box;
        text-align: center; /* Center the content horizontally */
      }

      /* Style for input fields */
      input[type="password"],
      input[type="text"] {
        width: calc(100% - 20px); /* Take into account padding and border */
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
      }

      /* Style for submit button */

      .primary1 {
        display: inline-block;
        transition: all 0.2s ease-in;
        position: relative;
        overflow: hidden;
        z-index: 1;
        color: #090909;
        padding: 0.7em 1.7em;
        cursor: pointer;
        font-size: 18px;
        border-radius: 0.5em;
        background: #e8e8e8;
        border: 1px solid #e8e8e8;
      }

      .primary1:active {
        color: #666;
        box-shadow: inset 4px 4px 12px #c5c5c5, inset -4px -4px 12px #ffffff;
      }

      .primary1:before {
        content: "";
        position: absolute;
        left: 50%;
        transform: translateX(-50%) scaleY(1) scaleX(1.25);
        top: 100%;
        width: 140%;
        height: 180%;
        background-color: rgba(0, 0, 0, 0.05);
        border-radius: 50%;
        display: block;
        transition: all 0.5s 0.1s cubic-bezier(0.55, 0, 0.1, 1);
        z-index: -1;
      }

      .primary1:after {
        content: "";
        position: absolute;
        left: 55%;
        transform: translateX(-50%) scaleY(1) scaleX(1.45);
        top: 180%;
        width: 160%;
        height: 190%;
        background-color: #fda12b;
        border-radius: 50%;
        display: block;
        transition: all 0.5s 0.1s cubic-bezier(0.55, 0, 0.1, 1);
        z-index: -1;
      }

      .primary1:hover {
        color: #ffffff;
        border: 1px solid #fda12b;
      }

      .primary1:hover:before {
        top: -35%;
        background-color: #fda12b;
        transform: translateX(-50%) scaleY(1.3) scaleX(0.8);
      }

      .primary1:hover:after {
        top: -45%;
        background-color: #fda12b;
        transform: translateX(-50%) scaleY(1.3) scaleX(0.8);
      }

      /* Style for heading */
      h2 {
        margin-bottom: 20px; /* Add margin below the heading */
      }
    </style>
  </head>
  <body>
    <div class="form-container">
      <h2>Enter new password</h2>
      <form action="" method="post">
        <input
          type="text"
          name="confirm-password"
          placeholder="Email"
          value="<%= email%>"
          id="confirm-password"
        /><br />
        <input
          type="password"
          placeholder="Enter new Password"
          name="password"
          id="password"
        /><br />
        <!-- <input type="submit" value="Submit" /> -->
        <div class="buttons">
          <button class="primary1" type="submit">
            Reset Password <i class="fa fa-sign-out" aria-hidden="true"></i>
          </button>
        </div>
      </form>
    </div>
  </body>
</html>
